{
  "name": "distrbute-monorepo",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "npm run dev:marketing & npm run dev:brand & npm run dev:distributor",
    "build": "npm run build:shared-models && npm run build:ui && npm run build:brand && npm run build:distributor && npm run build:marketing",
    "lint": "npm run lint:marketing && npm run lint:brand && npm run lint:distributor",
    "clean": "npm run clean:marketing && npm run clean:brand && npm run clean:distributor && npm run clean:shared-models",
    "dev:brand": "cd apps/frontend/brand && npm run dev",
    "dev:distributor": "cd apps/frontend/distributor && npm run dev",
    "dev:marketing": "cd apps/frontend/marketing && npm run dev",
    "build:ui": "cd libs/next-shared && npm run build",
    "build:shared-models": "cd libs/next-shared && npm run build",
    "build:brand": "cd apps/frontend/brand && npm run build",
    "build:distributor": "cd apps/frontend/distributor && npm run build",
    "build:marketing": "cd apps/frontend/marketing && npm run build",
    "lint:brand": "cd apps/frontend/brand && npm run lint",
    "lint:distributor": "cd apps/frontend/distributor && npm run lint",
    "lint:marketing": "cd apps/frontend/marketing && npm run lint",
    "clean:brand": "cd apps/frontend/brand && npm run clean",
    "clean:distributor": "cd apps/frontend/distributor && npm run clean",
    "clean:marketing": "cd apps/frontend/marketing && npm run clean",
    "clean:shared-models": "cd libs/next-shared && npm run clean"
  },
  "devDependencies": {
    "turbo": "^2.3.7",
    "@types/node": "^22.10.2",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}